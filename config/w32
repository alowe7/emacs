  )

(defun browse-path () (interactive)
  "pringle path in a browser buffer"
  (let ((temp-buffer-show-function '(lambda (buf)
				      (debug)
				      (set-buffer buf)
				      (fb-mode)))))

  (with-output-to-temp-buffer "foo"
    (mapcar '(lambda (x) (princ (expand-file-name x)) (princ "\n")) (catpath "PATH" (if (eq window-system 'win32) semicolon)))
    )
  )


(defun control-panel (c) 
  "run control panel applets"
  (interactive
   (list
    (completing-read
     "?" 
     (mapcar
      '(lambda (x)
	 (list
	  (file-name-sans-extension x)))
      (directory-files (expand-file-name (concat *systemroot* "/system32")) nil "cpl$")
      )
     )))

  (let ((p (get-process "cpl")))
    (and p (kill-process p))
    (start-process "cpl" nil "control" (concat c ".cpl")
		   )
    )
  )

(defun shortcut-view (f &optional arg) 
  "describe shortcut F"
  (interactive "fshortcut: ")

  (let ((s (eval-process "shortcut" "-u" "all" (expand-file-name f))))
    (if arg
	(split s ?
	       )
      (let ((b (zap-buffer (concat "*Shortcut* " (file-name-nondirectory f)))))
	(set-buffer b)
	(insert s)
	(pop-to-buffer b)
	(beginning-of-buffer)
	(help-mode)
	)
      )
    )
  )

(or (assoc "lnk"  file-assoc-list) (push '("lnk" . shortcut-view) file-assoc-list))

(defun domainname () 
  (clean-string (reg-query "machine" 
			   "system/currentcontrolset/services/tcpip/parameters" "domain"))
  )

(defun update-shortcut (target name)
  (call-process 
   "shortcut" nil nil nil "-c" "-t" target "-n" name)
  )
(defun my-documents () 
  (w32-canonify 
   ($
    "\\docume~1\\$USERNAME\\mydocu~1")))

(defun quicklaunch () 
  (w32-canonify 
   (concat
    "C:\\Documents and Settings\\" 
    ($ "$USERNAME")
    "\\Application Data\\Microsoft\\Internet Explorer\\Quick Launch"
    )))

(defun query-shortcut (name &optional attr)
 
  (let ((a (loop
	    for x in (split  (eval-process
			      "shortcut" "-u" "all" "-n" name) "
")
	    collect 
	    (let ((l (split x ":")))
	      (list (intern (car l)) (trim-white-space (cadr l))))
	    )))
    (if attr (cadr (assoc attr a)) a)
    )
  )

(defun target (lnk)
(let ((f (cond ((file-exists-p lnk) lnk)
	       ((file-exists-p (concat lnk ".lnk")) (concat lnk ".lnk")))))
 (query-shortcut f 'Target)))


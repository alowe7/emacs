(let ((map (symbol-function  'esc-p-prefix)))
  (define-key map "p" 'push-world-p)
  (define-key map "u" 'pop-world)
  (define-key map "x" 'swap-world)
  (define-key map "o" 'roll-world-stack)
  (define-key map " " 'roll-world-list)
  map)



#!/usr/local/bin/perl
#      $Id: make-autoloads,v 1.9 2001-06-27 09:07:31 cvs Exp $
use getopt;

getopt('-');
if ($opt_help) {
    print "
	usage: make-autoloads [options] | <filelist>
	
	options:
		--help		print usage
		--version	print versoin
	
	<filelist> is a list of emacs lisp modules.
	produce an expression on STDOUT which can be evaluated to autoload
	all functions and macros defined in those modules.
";
    exit;
}
elsif ($opt_version) {
# sadly gives goofy trailing $
#    $version="$Revision: 1.9 $";
    print "make-autoloads version 1.9\n";
    exit;
}

# todo: grab doc strings too
print "(setq autoload-alist `( ";

foreach $fn (@ARGV) {
    foreach $def ("defun", "defmacro") {
	@path=split(?/?, $fn);
	$f=pop(@path);
	open(F, $fn);
	binmode F;
	foreach (<F>) {
	    if (/^\($def/) {
		($pat, $func)=split;
		if (($pat eq "(defun") ||
		    ($pat eq "(defmacro")) {
		    print "($func \"$f\")\n";
		}
	    }
	    close(F);
	}
    }
}
print "))\n";

print "(mapcar '(lambda (x) (autoload (car x) (cadr x) nil t)) autoload-alist)\n";

